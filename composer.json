{
    "name": "laravel/lumen",
    "description": "The Laravel Lumen Framework.",
    "keywords": ["framework", "laravel", "lumen"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.2 || ^8.0",
        "laravel/lumen-framework": "^6.0",
        "qeezer/api-responder": "^1.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "friendsofphp/php-cs-fixer": "^3.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^8.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Libraries\\": "libraries/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update",

        "update-env": "@php -r \"copy('.env.example', '.env');\"",
        "run": ["Composer\\Config::disableProcessTimeout","php -S 0.0.0.0:9090 -t public"],
        "test": "vendor/bin/phpunit",
        "test-": "phpdbg -dmemory_limit=1024M -qrr vendor/bin/phpunit -c phpunit.xml --verbose",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "vendor/bin/phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app",
        "cghooks": "vendor/bin/cghooks"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "hooks": {
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "composer cs-fix",
                "composer analyse",
                "composer test"
            ],
            "post-merge": "composer install"
        }
    }
}
